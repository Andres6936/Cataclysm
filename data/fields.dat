name: fire
  spread_chance: 10
  spread_cost:  100
  flags: solid
  fuel:
    item_flag:    flammable
    fuel: 100
    damage: 3d10
    output_field: smoke
    output_duration: 6d6 - 10
  done
  fuel:
    terrain_flag: water
    fuel: -50
    output_field: steam
    output_duration: 5d6 - 10
